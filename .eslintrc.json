{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "extends": "eslint:recommended",        
        "newline-per-chained-call": [
            "error", { "ignoreChainWithDepth": 2 }
        ],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-console": ["error", { "allow": ["warn", "error","log"] }],
        "semi": ["error", "never"]
    }
}